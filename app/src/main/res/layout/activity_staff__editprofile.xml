<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBlack"
    tools:context=".staff.Staff_EditprofileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="30dp">

        <ImageView
            android:id="@+id/ivStaff_Editback"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:src="@drawable/back"/>

        <TextView
            android:id="@+id/tvStaff_Editprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:ems="10"
            android:layout_weight="1"
            android:textSize="20sp"
            android:fontFamily="@font/futura_medium_bt"
            android:text=" Edit Profile"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStaff_Edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:fontFamily="@font/futura_medium_bt"
                android:text="Your Profile"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvStaff_Editname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/futura_medium_bt"
                android:text="Name:"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"/>

            <EditText
                android:id="@+id/etStaff_Editname_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:hint="sample Name"
                android:inputType="text"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/futura_medium_bt"
                android:background="@drawable/bg_edittext_transparent"/>

            <View
                android:id="@+id/horDivider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="5dp"
                android:background="?android:attr/listDivider"/>

            <TextView
                android:id="@+id/tvStaff_Editmob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/futura_medium_bt"
                android:text="Mobile Number:"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"/>

            <EditText
                android:id="@+id/etStaff_Editmobno_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:hint="sample number"
                android:inputType="phone"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/futura_medium_bt"
                android:background="@drawable/bg_edittext_transparent"/>

            <View
                android:id="@+id/horDivider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="5dp"
                android:background="?android:attr/listDivider"/>

            <TextView
                android:id="@+id/tvStaff_Editmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/futura_medium_bt"
                android:text="Email:"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"/>

            <EditText
                android:id="@+id/etStaff_Editemail_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:hint="sample Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/futura_medium_bt"
                android:background="@drawable/bg_edittext_transparent"/>

            <View
                android:id="@+id/horDivider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="5dp"
                android:background="?android:attr/listDivider"/>

            <TextView
                android:id="@+id/tvStaff_Editadd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/futura_medium_bt"
                android:text="Address:"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"/>

            <EditText
                android:id="@+id/etStaff_Editadd_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:hint="sample Address"
                android:inputType="text"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/futura_medium_bt"
                android:background="@drawable/bg_edittext_transparent"/>

            <View
                android:id="@+id/horDivider4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="5dp"
                android:background="?android:attr/listDivider"/>


            <TextView
                android:id="@+id/tvEdit_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="@drawable/button"
                android:layout_margin="40dp"
                android:gravity="center"
                android:text="Save"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/futura_medium_bt"
                android:textAllCaps="false"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>