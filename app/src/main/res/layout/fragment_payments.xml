<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBlack"
    tools:context=".client.fragment.PaymentsFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cdPend"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="25dp"
                    android:elevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:background="@drawable/shape_red">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/cvPend"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:padding="5dp"
                            android:src="@drawable/payment_red"
                            android:background="@drawable/circle_white">
                        </de.hdodenhof.circleimageview.CircleImageView>

                        <TextView
                            android:id="@+id/tvPend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/futura_medium_bt"
                            android:textSize="20sp"
                            android:text="Pending Payments"
                            android:textColor="@color/colorWhite"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/futura_medium_bt"
                                android:textSize="20sp"
                                android:text="₹"
                                android:textColor="@color/colorWhite"/>

                            <TextView
                                android:id="@+id/tvPending_Money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:textSize="20sp"
                                android:fontFamily="@font/futura_medium_bt"
                                android:inputType="number"
                                android:text="2000"
                                android:textColor="@color/colorWhite"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>



               <androidx.cardview.widget.CardView
                    android:id="@+id/cdPaid"
                   android:layout_width="match_parent"
                   android:layout_height="170dp"
                   android:layout_marginTop="30dp"
                   app:cardCornerRadius="25dp"
                   android:elevation="10dp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       android:padding="15dp"
                       android:background="@drawable/shape_green">

                       <de.hdodenhof.circleimageview.CircleImageView
                           android:id="@+id/cvPaid"
                           android:layout_width="70dp"
                           android:layout_height="70dp"
                           android:padding="5dp"
                           android:src="@drawable/payment_green"
                           android:background="@drawable/circle_white">
                       </de.hdodenhof.circleimageview.CircleImageView>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="5dp"
                           android:fontFamily="@font/futura_medium_bt"
                           android:textSize="20sp"
                           android:text="Paid Payments"
                           android:textColor="@color/colorWhite"/>

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"
                           android:layout_marginTop="5dp">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="@font/futura_medium_bt"
                               android:textSize="20sp"
                               android:text="₹"
                               android:textColor="@color/colorWhite"/>

                           <TextView
                               android:id="@+id/tvPaid_Money"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:padding="5dp"
                               android:textSize="20sp"
                               android:fontFamily="@font/futura_medium_bt"
                               android:inputType="number"
                               android:text="2000"
                               android:textColor="@color/colorWhite"/>
                       </LinearLayout>
                   </LinearLayout>
               </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>






