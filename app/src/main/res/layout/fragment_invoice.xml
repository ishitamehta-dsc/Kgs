<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".client.fragment.InvoiceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_margin="30dp">

            <ImageView
                android:id="@+id/ivBackInv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/back">
            </ImageView>

            <TextView
                android:id="@+id/tvInvoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:fontFamily="@font/futura_medium_bt"
                android:text="Invoice"
                android:textColor="@color/colorWhite">
            </TextView>

            <ImageView
                android:id="@+id/ivNotiInvc"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_marginStart="110dp"
                android:src="@drawable/notification">
            </ImageView>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"
            android:layout_marginTop="20dp"
            android:paddingTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cdInvcard1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:elevation="20dp"
                    android:layout_margin="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvInvUser1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/futura_medium_bt"
                                android:inputType="text"
                                android:textSize="17sp"
                                android:text="chandrapal Singh"
                                android:textColor="@color/colorBlack">
                            </TextView>

                            <TextView
                                android:id="@+id/TvInvDate1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="date"
                                android:layout_marginTop="25dp"
                                android:textSize="15dp"
                                android:fontFamily="@font/futura_medium_bt"
                                android:text="15/09/2020 - 17/09/2020"
                                android:textColor="@color/colorBlack">
                            </TextView>

                        </LinearLayout>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/cvRupee1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="25dp"
                            android:padding="6dp"
                            android:src="@drawable/rupee"
                            android:background="@drawable/circlular">
                        </de.hdodenhof.circleimageview.CircleImageView>

                        <TextView
                            android:id="@+id/tvInvPrice1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textSize="16sp"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/futura_medium_bt"
                            android:layout_marginStart="5dp"
                            android:text="20,000"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cdInvcard2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:elevation="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvInvuser2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/futura_medium_bt"
                                android:inputType="text"
                                android:textSize="17sp"
                                android:background="@drawable/bg_edittext_transparent"
                                android:text="chandrapal Singh"
                                android:textColor="@color/colorBlack">
                            </TextView>

                            <TextView
                                android:id="@+id/tvInvDate2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="date"
                                android:layout_marginTop="25dp"
                                android:textSize="15dp"
                                android:fontFamily="@font/futura_medium_bt"
                                android:text="18/07/2020 - 20/07/2020"
                                android:textColor="@color/colorBlack">
                            </TextView>
                        </LinearLayout>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/cvRupee2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="25dp"
                            android:padding="6dp"
                            android:src="@drawable/rupee"
                            android:background="@drawable/circlular">
                        </de.hdodenhof.circleimageview.CircleImageView>

                        <TextView
                            android:id="@+id/tvInvPrice2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:fontFamily="@font/futura_medium_bt"
                            android:textSize="16sp"
                            android:textColor="@color/colorBlack"
                            android:layout_marginStart="5dp"
                            android:background="@drawable/bg_edittext_transparent"
                            android:text="10,000"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</FrameLayout>